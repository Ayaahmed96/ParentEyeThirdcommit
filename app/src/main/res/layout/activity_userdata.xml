<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".UserdataActivity">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center_horizontal"
       android:padding="20dp">

      <de.hdodenhof.circleimageview.CircleImageView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/profile_image"
          android:layout_width="180dp"
          android:layout_height="180dp"
          android:src="@drawable/defaultprofile"
          android:layout_marginTop="15dp"
          app:civ_border_width="2dp"
          app:civ_border_color="#FF000000"
          android:layout_marginBottom="15dp"/>


      <EditText
          android:id="@+id/usernameedittext"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Username"
          android:gravity="center_horizontal"
          android:layout_marginBottom="10dp"
          android:textStyle="bold"
          android:textColorHint="#902c3e50"/>


      <EditText
          android:id="@+id/addresse_edittext"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Addreese"
          android:textStyle="bold"
          android:layout_marginBottom="10dp"
          android:gravity="center_horizontal"
          android:textColorHint="#902c3e50"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/calender"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="#2c3e50"
        android:textSize="20dp"
        android:text="Date of Birth"/>

 </LinearLayout>


            <RadioGroup
                android:id="@+id/radipgp_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radiobtn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true"
                    android:textColor="#2c3e50"
                    android:textSize="20dp" />
                <RadioButton
                    android:id="@+id/radiobtn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#2c3e50" />


            </RadioGroup>




       <Button
           android:id="@+id/submit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Submit"
           android:textSize="20dp"
           android:background="#fad7a0 "
           android:textColor="#2c3e50"
           android:layout_marginTop="15dp" />



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Please help us complete your profile information "
          android:textSize="20dp"
          android:gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:textColor="#2c3e50"
          android:textStyle="bold"/>

       <TextView
           android:id="@+id/logout_data"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:text="logout"
           android:textSize="20dp"
           android:gravity="center_horizontal"
           android:textColor="#2c3e50"
           android:textStyle="bold"/>


   </LinearLayout>



</android.support.constraint.ConstraintLayout>